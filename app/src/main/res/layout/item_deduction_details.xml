<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qmui_config_color_pure_black"
    xmlns:tolls="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_tv_count"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        tolls:text="序号"/>

    <TextView
        android:id="@+id/id_tv_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        tolls:text="时间"/>

    <TextView
        android:id="@+id/id_tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:gravity="center"
        tolls:text="@string/category"/>

    <TextView
        android:id="@+id/id_tv_single_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:gravity="center"
        tolls:text="单重"/>

    <TextView
        android:id="@+id/id_tv_deduction_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:gravity="center"
        tolls:text="次数"/>

    <TextView
        android:id="@+id/id_tv_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/qmui_config_color_white"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        tolls:text="重量"/>


</LinearLayout>