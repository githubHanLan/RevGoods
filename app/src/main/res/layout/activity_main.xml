<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_tv_hand"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/hand_weight"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_print"
        app:layout_constraintStart_toEndOf="@+id/id_tv_cumulative"
        app:layout_constraintTop_toTopOf="@+id/id_iv_print"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="(kg)"
        android:textColor="#F4FC14"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_show_piece_weight"
        app:layout_constraintStart_toEndOf="@+id/id_tv_show_piece_weight"
        app:layout_constraintTop_toTopOf="@+id/id_tv_show_piece_weight" />

    <TextView
        android:id="@+id/tv_cumulative_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="0"
        android:textColor="#F4FC14"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/cumulative_weight"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_sampling_number"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/id_tv_sampling_number" />

    <ImageView
        android:id="@+id/id_iv_choose_specs"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/text_background"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_takePicture"
        app:layout_constraintStart_toEndOf="@+id/id_iv_choose_matter"
        app:layout_constraintTop_toTopOf="@+id/id_iv_takePicture"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_specs_36dp" />

    <TextView
        android:id="@+id/id_tv_save_bill"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/save_bill"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_print"
        app:layout_constraintEnd_toStartOf="@+id/id_tv_is_upload"
        app:layout_constraintTop_toTopOf="@+id/id_iv_print"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_tv_is_upload"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="0/0"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_save_bill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/id_tv_save_bill"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(kg)"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/matter"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_choose_matter"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/id_iv_choose_matter"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_specs"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/specs"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_choose_matter"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/id_iv_choose_matter"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_tv_sampling_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="(0)"
        android:textColor="#F4FC14"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_sampling_count"
        app:layout_constraintStart_toEndOf="@+id/id_tv_sampling_count"
        app:layout_constraintTop_toTopOf="@+id/id_tv_sampling_count"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/cumulative_count"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />


    <TextView
        android:id="@+id/id_tv_cumulative"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/cumulative"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_print"
        app:layout_constraintStart_toEndOf="@+id/id_tv_deduction"
        app:layout_constraintTop_toTopOf="@+id/id_iv_print"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/net_weight"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/id_tv_weight"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text="(kg)"
        android:textColor="#F4FC14"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cumulative_weight"
        app:layout_constraintStart_toEndOf="@+id/tv_cumulative_weight" />

    <TextView
        android:id="@+id/tv_cumulative_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="0"
        android:textColor="#F4FC14"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView24"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/id_tv_sampling_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/sampling_cumulative"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toTopOf="@+id/id_tv_sampling"
        app:layout_constraintStart_toStartOf="@+id/id_tv_sampling" />

    <TextView
        android:id="@+id/id_tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline8" />

    <ImageView
        android:id="@+id/id_tv_choose_supplier"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_takePicture"
        app:layout_constraintStart_toEndOf="@+id/id_iv_takePicture"
        app:layout_constraintTop_toTopOf="@+id/id_iv_takePicture"
        app:srcCompat="@drawable/ic_company_36dp" />

    <ImageView
        android:id="@+id/id_iv_choose_printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_background"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_choose_print_24" />

    <ImageView
        android:id="@+id/id_iv_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/text_background"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_choose_printer"
        app:layout_constraintStart_toEndOf="@+id/id_iv_choose_printer"
        app:srcCompat="@drawable/ic_print_24dp" />

    <ImageView
        android:id="@+id/id_iv_takePicture"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_background"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera_36dp" />

    <kkkj.android.revgoods.customer.ReSpinner
        android:id="@+id/id_tv_choose_device"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|right"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_specs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_specs" />

    <ImageView
        android:id="@+id/id_iv_choose_matter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/text_background"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_takePicture"
        app:layout_constraintStart_toEndOf="@+id/id_tv_choose_supplier"
        app:layout_constraintTop_toTopOf="@+id/id_iv_takePicture"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_choose_matter_36dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/supplier"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_choose_matter"
        app:layout_constraintStart_toEndOf="@+id/id_iv_choose_specs"
        app:layout_constraintTop_toTopOf="@+id/id_iv_choose_matter"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_tv_deduction"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/deduction"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_print"
        app:layout_constraintStart_toEndOf="@+id/id_tv_piece_weight"
        app:layout_constraintTop_toTopOf="@+id/id_iv_print"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/id_tv_piece_weight"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/piece_weight"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_print"
        app:layout_constraintStart_toEndOf="@+id/id_tv_sampling"
        app:layout_constraintTop_toTopOf="@+id/id_iv_print" />

    <TextView
        android:id="@+id/id_tv_sampling"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/sampling"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_print"
        app:layout_constraintStart_toEndOf="@+id/id_iv_print"
        app:layout_constraintTop_toTopOf="@+id/id_iv_print"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/id_tv_hand_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/hand_switch"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintEnd_toEndOf="@+id/id_tv_choose_device"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_tv_choose_device"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_choose_device" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_wifiRelay_recyclerView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/id_tv_is_upload"
        app:layout_constraintEnd_toEndOf="@+id/id_tv_hand_switch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_tv_hand_switch"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_hand_switch"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/piece_weight_colon"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/id_tv_weight"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_choose_supplier"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/id_tv_show_piece_weight"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textColor="#F4FC14"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/id_iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rigth_setting" />

</android.support.constraint.ConstraintLayout>