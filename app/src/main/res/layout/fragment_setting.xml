<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_radius_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:padding="6dp">

        <TextView
            android:id="@+id/id_tv_deduction_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/deduction_category"
            android:background="@drawable/text_black_background"
            android:textColor="@color/qmui_config_color_50_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_tv_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="@string/change_language"
            android:background="@drawable/text_black_background"
            android:textColor="@color/qmui_config_color_50_white"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>